@model SPCF.ViewModels.BookViewModel.Edit

@using (Html.BeginForm("_UploadImage", "Books", new { bookId = Model.Id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            <div class="col-md-10">
                @Html.TextBoxFor(m => Model.Image, new { type = "file", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                <input class="btn btn-link" type="submit" value="Upload" />
            </div>
        </div>
    </div>
}
